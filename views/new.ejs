<% include ./partials/header %>

<div class="container p-5" id="form">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form action="/notes" method="POST">
                <div class="form-group">
                    <label>Note Title</label>
                    <input type="text" name="note[title]" class="form-control" placeholder="Title">
              </div>
              <div class="form-group">
                    <label>Image URL</label>
                    <input type="text" name="note[image]" class="form-control" placeholder="Image url">
              </div>
              <div class="form-group">
                  <label>Note Content</label>
                  <textarea class="form-control" rows=8 name="note[content]" placeholder="Write a note"></textarea>
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
         
    </div>
</div>

<script src="https://cdn.ckeditor.com/4.10.1/standard/ckeditor.js"></script>
<script>
    CKEDITOR.replace('note[content]');
</script>
<% include ./partials/footer %>