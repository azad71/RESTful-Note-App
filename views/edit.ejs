<% include ./partials/header %>
<div class="container p-5" id="form">
    <div class="row">
        <div class="col-md-7 offset-md-3">
             <h3 class="text-center">Edit  "<%= note.title %>" </h3>
            <form action="/notes/<%= note._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Note Title</label>
                    <input type="text" name="note[title]" class="form-control" value="<%= note.title %>">
              </div>
              <div class="form-group">
                    <label>Image URL</label>
                    <input type="text" name="note[image]" class="form-control"value="<%= note.image %>">
              </div>
              <div class="form-group">
                  <label>Note Content</label>
                  <textarea class="form-control" rows=5 name="note[content]"> <%= note.content %> </textarea>
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.ckeditor.com/4.10.1/standard/ckeditor.js"></script>
<script>
    CKEDITOR.replace('note[content]');
</script>

<% include ./partials/footer %>