<% include ./partials/header %>

<div class="container ">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card">
                <div class="card-header">
                    <h4 class="text-center"><%= note.title %></h4>
                </div>
                <img class="card-img-top" src="<%= note.image %>">
                <small class="text-muted px-3 py-2"> <%= note.created.toDateString() %> </small>
                <div class="card-body">
                    <p class="card-text"> <%- note.content %> </p>
                     <a class="btn btn-primary btn-lg" href="/notes/<%=note._id%>/edit"><i class="fa fa-pencil"></i></a>
                    <form class="float-right" id="delete" action="/notes/<%=note._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger btn-lg"><i class="fa fa-trash"></i></button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ./partials/footer %>